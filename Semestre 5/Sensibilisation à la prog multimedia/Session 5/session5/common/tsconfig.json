{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",            /* Generate ES6 modules */
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["ES2015"],
    "strict": true,
    "moduleResolution": "node", /* Use Node.js-style module resolution */
    "esModuleInterop": true,    /* Enable compatibility with CommonJS modules */
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
