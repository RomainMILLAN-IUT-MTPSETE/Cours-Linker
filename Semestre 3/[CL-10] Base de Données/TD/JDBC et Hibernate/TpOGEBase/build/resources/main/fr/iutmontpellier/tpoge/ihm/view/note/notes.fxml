      fx:controller="fr.iutmontpellier.tpoge.application.note.NoteController"
      prefHeight="400.0" prefWidth="300.0">
    <ListView fx:id="notes" VBox.vgrow="ALWAYS">

    </ListView>
    <HBox alignment="CENTER" spacing="15">
        <Button onAction="#ajouterNote">Ajouter</Button>
        <Button onAction="#editerNote">Editer</Button>
        <Button onAction="#supprimerNote">Supprimer</Button>
        <padding>
            <Insets bottom="10.0" />
        </padding>
    </HBox>
    <HBox alignment="CENTER" spacing="15">
        <Button onAction="#rafracihirListeNotes">Rafraichir</Button>
        <padding>
            <Insets bottom="10.0" />
        </padding>
    </HBox>
</VBox>
